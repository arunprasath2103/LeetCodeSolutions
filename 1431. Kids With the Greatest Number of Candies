class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        List<Boolean> result = new ArrayList<>();
        int greatest = candies[0];
        for(int i : candies) {
            if(i > greatest) greatest = i;
        }
        for(int i : candies) {
            if (i+extraCandies >= greatest)
                result.add(true);
            else
                result.add(false);
        }
        return result;
    }
}