class Solution {
    public int[] minOperations(String boxes) {
        
        int len = boxes.length();
        int moves = 0;
        int[] result = new int[len];
        for(int i = 0; i < len; i++) {
            for(int j = 0; j < len; j++) {
                moves += (boxes.charAt(j) == '1') ? Math.abs(i - j) : 0;
            }
            result[i] = moves;
            moves = 0;
        }
        return result;
    }
}