class Solution {
    public static boolean scoreBalance(String s) {
        String left, right;
        int len = s.length();
        for(int i = 1; i < len; i++) {
            left = s.substring(0, i);
            right = s.substring(i, len);
            if(findScore(left) == findScore(right)) {
                return true;
            }
        }
        return false;
    }
    public static int findScore(String s) {
        int score = 0;
        for(char i : s.toCharArray()) {
            score += (int) (i - 'a' + 1);
        }
        return score;
    }
}