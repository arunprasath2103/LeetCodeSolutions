class Solution {
    public int sumDivisibleByK(int[] nums, int k) {
        Arrays.sort(nums);
        int len = 0, sum = 0;
        for(int i = 0; i < nums.length; i++) {
            for(int j = i; j < nums.length; j++) {
                if(nums[i] != nums[j]) {
                    len = j - i;
                    i = j - 1;
                    break;
                }
                if(j == nums.length-1) {
                    len = j - i + 1;
                    i = j;
                }
            }
            sum += (len % k == 0) ? nums[i] * len : 0;
            len = 0;
        }
        return sum;
    }
}