class Solution {
    public int minBitFlips(int start, int goal) {
        int operation = 0;
        StringBuilder bin1 = new StringBuilder(Integer.toBinaryString(start));
        StringBuilder bin2 = new StringBuilder(Integer.toBinaryString(goal));
        int len1 = bin1.length();
        int len2 = bin2.length();
        if (len1 > len2) {
            for(int i=0; i < len1-len2; i++) bin2.insert(0,"0");
        }
        else if (len2 > len1) {
            for(int i = 0; i < len2-len1; i++) bin1.insert(0, "0");
            len1 = len2;
        }
        for(int i = len1 - 1; i >= 0; i--){
            if(bin1.charAt(i) != bin2.charAt(i)) {
                operation++;
            }
        }
        return operation;
    }
}