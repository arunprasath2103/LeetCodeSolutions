class Solution {
    public int longestSubarray(int[] nums) {
        int len, maxLen = 2;
        int i, j;
        for(i = 0; i < nums.length - 2; i++) {
            for(j = i + 1; j < nums.length - 1; j++)
                if(nums[j - 1] + nums[j] != nums[j+1]) break;
            len = j - i + 1;
            maxLen = (maxLen < len) ? len : maxLen;
            i = j - 1;
        }
        return maxLen;
    }
}