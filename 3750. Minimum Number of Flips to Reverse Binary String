class Solution {
    public int minimumFlips(int n) {
        int count = 0;
        char[] bin = Integer.toBinaryString(n).toCharArray();
        int len = bin.length;
        char[] rev = new char[len];
        for(int i = len-1; i >=0; i--){
            rev[len-i-1] = bin[i];
        }
        for(int i = 0; i < len; i++) {
            if(rev[i] != bin[i]) count++;
        }
        return count;
    }
}