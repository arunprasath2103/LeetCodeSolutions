class Solution {
    public static int[] leftRightDifference(int[] nums) {
        int leftSum, rightSum, len = nums.length;
        int[] result = new int[len];
        for(int i = 0; i < len; i++)
            result[i] = Math.abs(arrSum(nums, 0, i) - arrSum(nums, i+1, len));
        return result;
    }
    public static int arrSum(int[] arr, int start, int stop) {
        int sum = 0;
        for(int i = start; i < stop; i++) sum+=arr[i];
        return sum;
    }
}