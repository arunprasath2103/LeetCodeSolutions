/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int count=0;
    public int averageOfSubtree(TreeNode root) {
        edhookati(root);
        return count;


    }
    private int[] edhookati(TreeNode root){
         if(root==null){
            return new int[]{0,0};
        }

        int[] a=edhookati(root.left);
        int[] b=edhookati(root.right);

        int sum=a[0]+b[0]+root.val;
        int size=a[1]+b[1]+1;

        if(sum/size==root.val){
            count++;
        }

        return new int[]{sum,size};

    }
}