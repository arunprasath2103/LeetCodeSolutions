class Solution {
    public int minimumOperations(int[] nums) {
        int operation = 0, len = nums.length;
        int arr[] = new int[len];

        for(int i = 0; i < len; i++) {
            arr[i] = ((int) nums[i] / 3) * 3;
        }
        for(int i = 0; i < len; i++) {
            operation += Math.min((nums[i] - arr[i]), ((arr[i] + 3) - nums[i]));
        }
        return operation;
    }
}